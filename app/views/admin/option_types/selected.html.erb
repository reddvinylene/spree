<%= render :partial => "admin/shared/product_sub_menu" %>
<div>
  <%= render :partial => "admin/shared/product_tabs", :locals => {:current => "option types"} %>
  <table>
    <tr>
      <th><%= t :name %></th>
      <th><%= t :presentation %></th>
      <th></th>
    </tr>
    <% @option_types.each do |option_type| %>
      <tr>
        <td><%= option_type.name %></td>
        <td><%= option_type.presentation %></td>
        <td>
          <%= link_to t(:remove), remove_admin_product_option_type_url(@product, option_type) %>
        </td>
      </tr>
    <% end %>
  </table>
  <p><%= link_to_remote t(:add_option_type), {:url => available_admin_product_option_types_url(@product), :method => :get %></p>
</div>
