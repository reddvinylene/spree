<%= render :partial => "admin/shared/product_sub_menu" %>
<ul class="options">
  <li>
    <%= button_link_to_remote t(:new_option_type), {:url => new_admin_option_type_url, :method => :get} %>
  </li>
</ul>
<h1><%= t :option_types %></h1>
<table>
  <tr>
    <th><%= t :name %></th>
    <th><%= t :presentation %></th>
    <th><%= t :action %></th>
  </tr>
  <% @option_types.each do |option_type| %>
    <tr>
      <td><%= option_type.name %></td>
      <td><%= option_type.presentation %></td>
      <td>
        <%= link_to_edit(option_type) %>
        <%= link_to_delete(option_type) %>
      </td>
    </tr>
  <% end %>
</table>
