<table>
  <tr>
    <th><%= t :name %></th>
    <th><%= t :path %></th>
    <th><%= t :options %></th>
  </tr>
  <% taxons.each do |taxon| %>
    <tr id="<%= dom_id(taxon, :sel)%>">
      <td><%= taxon.name %></td>
      <td><%= taxon_path taxon %></td>
      <td>
        <%= link_to_remote t(:remove), {:url => remove_admin_product_taxon_url(@product, taxon), :update => "selected_taxons", :complete => "$('#{dom_id(taxon, :sel)}').remove()"} %>
      </td>
    </tr>
  <% end %>
</table>
