<%= render :partial => "admin/shared/product_sub_menu" %>
<%= render :partial => "admin/shared/product_tabs", :locals => {:current => "product properties"} %>
<%= error_messages_for :product %>
<% form_for(:product, :url => admin_product_url(@product), :html => { :method => :put }) do |f| %>
  <table>
    <tr>
      <th><%= t :property %></th>
      <th><%= t :value %></th>
      <th><%= t :action %></th>
    </tr>
    <%= f.render_associated_form(@product.product_properties) %>
  </table>
  <input type="hidden" name="clear_product_properties" value="true">
  <ul>
    <li><%= f.add_associated_link(t(:add_product_properties), @product.product_properties.build, {:onclick => "Element.hide('none');"}) %></li>
    <li><%= link_to_remote t(:select_from_prototype), :url => available_admin_prototypes_url, :method => :get %></li>
  </ul>
  <%= render :partial => "admin/shared/edit_resource_links" %>
<% end %>
