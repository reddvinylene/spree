<%= error_messages_for(:level) %>
<% form_tag do %>
  <h1><%= t :inventory_adjustment %></h1>
  <table>
    <tr>
      <th><%= t :sku %></th>
      <th><%= t :product %></th>
      <th><%= t :options %></th>
      <th><%= t :current %></th>
      <th><%= t :adjustment %></th>
    </tr>
    <tr>
      <td><%= @variant.sku %></td>
      <td><%= @variant.product.name %></td>
      <td><%= variant_options @variant %></td>
      <td><%= on_hand(@variant) %></td>
      <td><%= text_field :level, :adjustment, :class => "quantity" %></td>
    </tr>
  </table>
  <div class="button"><%= submit_tag t(:update) %><%= t :or %><%= link_to t(:cancel), :controller => "overview", :action => :index %></div>
<% end %>
