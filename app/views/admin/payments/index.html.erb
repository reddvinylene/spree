<ul class="options">
  <li><%= button_link_to t(:new_credit_card_payment), new_admin_order_creditcard_payment_url(@order) %></li>
</ul>
<%= render :partial => "admin/shared/order_tabs", :locals => {:current => "payments"} %>
<table>
  <tr>
    <th><%= "#{t(:'spree.date')}/#{t(:'spree.time')}" %></th>
    <th><%= t :amount %></th>
    <th><%= t :type %></th>
    <th><%= t :options %></td>
  </tr>
  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.created_at.to_s(:date_time24) %></td>
      <td><%= number_to_currency(payment.amount) %></td>
      <td><%= payment.class.to_s %></td>
      <td><%= link_to t(:edit), edit_admin_order_creditcard_payment_url(@order, payment) %></td>
    </tr>
  <% end %>
</table>
