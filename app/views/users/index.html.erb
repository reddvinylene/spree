<h1><%= t :listing_users %></h1>
<ul class="options">
  <li><%= link_to t(:new_user), new_object_url %></li>
</ul>
<table>
  <th><%= t :user %></th>
  <th><%= t :action %></th>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.email, object_url(user) %></td>
      <td>
        <%= link_to t(:edit), edit_object_url(user) %>
        <%= link_to t(:destroy), object_url(user), :confirm => t(:are_you_sure), :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
