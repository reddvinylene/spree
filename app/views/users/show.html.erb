<h1><%= t :my_account %></h1>
<ul class="options">
  <li><%= t :logged_in_as %> <%= @user.email %></li>
  <li><%= link_to t(:edit), edit_object_url %></li>
</ul>
<h2><%= t :my_orders %></h2>
<table>
  <tr>
    <th><%= t :order_number %></th>
    <th><%= t :order_date %></th>
    <th><%= t :status %></th>
    <% if order.user %>
      <th><%= t :customer %></th>
    <% end %>
    <th><%= t :total %></th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.number, order_url(order) %></td>
      <td><%= order.created_at.to_date %></td>
      <td><%= t(:order.state).titleize %></td>
      <% if order.user %>
        <td><%= order.user.email %></td>
      <% end %>
      <td><%= number_to_currency order.total %></td>
    </tr>
  <% end %>
</table>
